<div class="row">
  <div class="col-md-6 offset-3">
    <h1>
      <%= @user.username %>
    </h1>

    <%= render "users/tab" %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 offset-3">
    <ul class="list-group">
      <% @user.followers.each do |follower| %>
        <li class="list-group-item"><%= link_to follower.username,  user_path(follower.username) %></li>
      <% end %>
    </ul>
  </div>
</div>


<div class="row">
  <div class="col-md-6 offset-3">
    <h1>
      <%= @user.username %>
    </h1>

    <%= render "users/tab" %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 offset-3">
    <ul class="list-group">
      <% @user.leaders.each do |leader| %>
        <li class="list-group-item"><%= link_to leader.username,  user_path(leader.username) %></li>
      <% end %>
    </ul>
  </div>
</div>
